{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["esnext"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "webpack.config.js",
    "__tests__",
    "__mocks__",
    "coverage",
    "**/*.spec.ts",
    "jest.config.js",
    "package.json",
    "src/assets"
  ],
  "extends": "../../tsconfig.json"
}
